pkgname=cinnabar-core
pkgver=0.0.0
pkgrel=1
pkgdesc="Cinnabar Core"
arch=("x86_64")
url=""
license=('GPL')
groups=()
depends=(sdl2 glm)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
noextract=()
md5sums=() #autofill using updpkgsums

build() {
	echo "CINNABAR BUILD()"
}

package() {
	echo "CINNABAR PACKAGE()"
  mkdir -p $pkgdir/usr/{lib,include/$pkgname}

  cp ../lib$pkgname.so $pkgdir/usr/lib
  cp ../include/* $pkgdir/usr/include/$pkgname
}
