# Maintainer: Your Name <youremail@domain.com>
projectName=cinnabar-render

pkgname=lib$projectName
pkgrel=1
pkgdesc="OpenGL renderer for the cinnabar game engine"
arch=("any")
url=""
license=('GPL')
groups=()
depends=(libglfw3|libglfw3-wayland libglew2.1)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('project-path')
noextract=()
md5sums=('SKIP') #autofill using updpkgsums

build() {
	projectPath=$(cat project-path)
	cd "$projectPath"
	echo "$(rm -rf build)"
	mkdir build
	cd build
	cmake ..
	cmake --build . --target "$projectName"

	cd "$projectPath"
	echo "$(rm -rf doxygen-out)"
	mkdir "doxygen-out"
	doxygen "doxygen/$projectName.doxyfile"
}

package() {
	projectPath=$(cat project-path)
	mkdir -p "$pkgdir/usr/lib"

	cp "$projectPath/build/run/lib$projectName.so" "$pkgdir/usr/lib"
}